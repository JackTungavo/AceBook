@{
    ViewData["Title"] = "Profile";
    Layout = "_Layout";
}

@model acebook.Models.User

<div class="profile-container">

    <div class="profile">

        <div class="profile-header">
            <h2>@Model.Name</h2>
            <img src="@ViewBag.ProfileLookingAtImage" width="10%" style="width: 65px; border-radius: 20px;">
        </div>
        <div class="profile-followers">
        <h5>Followers @ViewBag.UsersFollowersNumber || Following @ViewBag.UsersIFollowingNumber</h5> 
        @if (Model.Id != ViewBag.Id)
        {   
            @* <p>Following Status: @ViewBag.FollowingStatus</p> *@
            <form action="/users/followuser" method="post">
            <input type="hidden" name="profileId" value="@Model.Id" />
            <input id="submit_button" type="submit" value="@ViewBag.FollowButtonText" />
            
            </form>
                <br>
                <a href="/messages">
                    <input id="submit_button" type="submit" value="Messsage @Model.Name" />
                </a>
        }
        </div>
        <div class="about-me">
            <h5>About Me</h5>
            <p>@Model.Bio</p>
        </div>

        <div class="update-profile-details">
        <div>
        @if (Model.Id == ViewBag.Id)
        {
            <h5>Update details</h5>
            <form action="/updateprofile" method="post" class="update-form">
                <div class="form-row">
                    <div class="form-column">
                        <h6>Update Username</h6>
                        <input type="text" name="newName" value="@Model.Name"/>
                        <input type="submit" value="Submit"/>
                    </div>
                    <div class="form-column">
                        <h6>Update Photo</h6>
                        <input type="text" name="newPhoto" value="@ViewBag.ProfileLookingAtImage"/>
                        <input type="submit" value="Submit"/>
                    </div>
                    <div class="form-column">
                        <h6>Update Bio</h6>
                        <input type="text" name="newBio" value="@Model.Bio"/>
                        <input type="submit" value="Submit"/>
                    </div>
                </div>
            </form>
            }
        </div>
        </div>




    </div>
</div>